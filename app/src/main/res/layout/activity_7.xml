<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity7">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".4"/>
    <TextView
        android:id="@+id/greeting_7"
        android:layout_width="@dimen/large_length"
        android:layout_height="@dimen/small_length"
        android:orientation="vertical"
        android:gravity="center"
        android:text="@string/greeting_7"
        android:background="@color/green_mid"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <include layout="@layout/reusable_layout"
        />


</androidx.constraintlayout.widget.ConstraintLayout>